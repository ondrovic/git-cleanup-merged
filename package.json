{
  "name": "git-cleanup-merged",
  "version": "1.0.0",
  "description": "Clean up local Git branches that have merged PRs on GitHub",
  "main": "index.js",
  "bin": {
    "git-cleanup-merged": "./src/bin.js"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:ci": "jest --coverage && node -e \"const fs=require('fs');const xml=fs.readFileSync('coverage/junit.xml','utf8');fs.writeFileSync('coverage/junit.xml',xml.replace(/\\\\/g,'/'));\"",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "git",
    "github",
    "cli",
    "cleanup",
    "branches",
    "merge"
  ],
  "author": "Chris Ondrovic",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ondro/git-cleanup-merged.git"
  },
  "bugs": {
    "url": "https://github.com/ondro/git-cleanup-merged/issues"
  },
  "homepage": "https://github.com/ondro/git-cleanup-merged#readme",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "jest": "^30.0.3",
    "jest-junit": "^16.0.0",
    "prettier": "^3.6.2"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 75
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/bin.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "coverage",
          "outputName": "junit.xml",
          "classNameTemplate": "{filepath}",
          "titleTemplate": "{title}",
          "ancestorSeparator": " â€º ",
          "usePathForSuiteName": true,
          "useFullFilePath": true,
          "classNameTemplate": "{filepath}"
        }
      ]
    ]
  }
}
